<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeee00"
    >
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/barcode_gift_image"
            android:layout_width="400dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:src="@drawable/caffe_latte" />

        <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/gift_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#909090"
        android:text="편의점"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/barcode_gift_text"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:text="행복한 하트 케이크"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/barcode_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:id="@+id/barcode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="#909090" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#909090"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:text="교환처"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/barcode_gift_store"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginEnd="15dp"
            android:text="CU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:layout_margin="15dp"
        android:background="#909090" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#909090"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:text="유효기간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/barcode_gift_date"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginEnd="15dp"
            android:text="2023.10.10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>