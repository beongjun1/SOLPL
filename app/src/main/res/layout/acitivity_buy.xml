        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="사용 "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_toLeftOf="@+id/point_btn_left"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/payment_my_point"
                android:text="0"
                android:textColor="@color/quantum_lightblue600"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/point_btn_left"
                android:layout_toLeftOf="@+id/point_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="P"
                android:layout_marginEnd="10dp"
                android:textColor="@color/quantum_lightblue600"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:id="@+id/point_btn"
                android:background="@drawable/border_sign_up"
                android:text="전액사용"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"/>

        </RelativeLayout>
